{
  "extends": [
    "next",
    "next/core-web-vitals",
    "airbnb",
    "plugin:jest/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": ["import", "@typescript-eslint", "jest"],
  "settings": {
    "import/resolver": {
      "typescript": {
        "directory": "./tsconfig.json"
      }
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [
      1,
      { "extensions": [".js", ".jsx", "ts", "tsx"] }
    ],
    "react/jsx-props-no-spreading": "off",
    "import/order": [
      "error",
      {
        // import문들을 그룹핑
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        // react 관련 import문들을 다른 외부 라이브러리들보다 더 위에 위치시켜주기
        "pathGroups": [
          {
            "pattern": "react",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "next",
            "group": "builtin",
            "position": "after"
          },
          {
            "pattern": "@/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "@*/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "./*",
            "group": "index",
            "position": "after"
          },
          {
            "pattern": "../*",
            "group": "index",
            "position": "after"
          }
        ],
        // 적용되지 않는 타입들을 예외처리하여 적용될 수 있도록해줌.
        "pathGroupsExcludedImportTypes": ["react", "next"],
        // 오름차순 정렬, 대소문자 구분 하지 않음
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "newlines-between": "always"
      }
    ],
    "react/function-component-definition": [
      // 함수형 컴포넌트 선언방식
      2,
      {
        "namedComponents": ["function-declaration", "arrow-function"]
      }
    ],
    "import/extensions": [
      // 임포트시 확장자 적어주지 않기 위해
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "operator-linebreak": "off",
    "import/prefer-default-export": "off", // export default 가 아닌 default 없이 export 할 수 있도록
    "implicit-arrow-linebreak": "off",
    "function-paren-newline": "off",
    "import/no-unresolved": "off",
    "import/no-extraneous-dependencies": "off",
    "react/require-default-props": "off",
    "react/no-unknown-property": ["error", { "ignore": ["css"] }],
    "no-return-assign": "off",
    "no-confusing-arrow": "off",
    "arrow-body-style": "off",
    "no-unused-vars": "off"
  }
}
